{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/socket.io/(.*)",
            "dest": "/server.js"
        }
    ],
    "env": {
        "PORT": "4000",
        "DB_HOST": "@db_host",
        "DB_USER": "@db_user",
        "DB_PASSWORD": "@db_password",
        "DB_NAME": "@db_name",
        "FRONTEND_URL": "@frontend_url"
    }
}